<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sidedrive.brooom.SendCode">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TopicText"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:text="Received Email ?" />

            <Button
                android:id="@+id/btnReSendEmail"
                style="@style/Button"
                android:layout_weight="0.5"
                android:onClick="OnReSendEmail"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Resend" />

            <Button
                android:id="@+id/btnReceiveCode"
                style="@style/Button"
                android:layout_weight="0.5"
                android:onClick="OnReceiveCode"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Yes" />

            <TextView
                android:id="@+id/code_text_error"
                style="@style/ErrorText"
                android:paddingLeft="10dp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
