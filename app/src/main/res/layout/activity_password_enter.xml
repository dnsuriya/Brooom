<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sidedrive.brooom.PasswordEnterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">


            <TextView
                style="@style/TopicText"
                android:layout_marginBottom="30dp"
                android:text="Welcome back, enter your password" />

            <AutoCompleteTextView
                android:id="@+id/autoTextPassword"
                style="@style/TextFields"
                android:layout_marginBottom="30dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp" />


            <Button
                android:id="@+id/btnLogin"
                style="@style/Button"
                android:onClick="onLogin"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="SIGN IN" />

            <TextView
                android:id="@+id/password_text_error"
                style="@style/ErrorText"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:onClick="on_signup"
                android:text="Dont have account"
                android:textColor="#000080"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:onClick="onFrogotPassword"
                android:text="Frogot Password"
                android:textColor="#000080"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

